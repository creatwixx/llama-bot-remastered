{
  "name": "llama-bot-remastered",
  "version": "1.0.0",
  "description": "Discord bot monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "./start-dev.sh",
    "build": "docker compose -f infra/docker-compose.yml build",
    "start": "docker compose -f infra/docker-compose.yml up",
    "stop": "docker compose -f infra/docker-compose.yml down",
    "db:migrate": "cd packages/llama-api && ./migrate.sh",
    "db:migrate:docker": "cd packages/llama-api && ./migrate-docker.sh",
    "db:studio": "cd packages/llama-api && export $(cat ../../infra/.env.local | grep -v '^#' | grep -v '^$' | xargs) && bunx prisma studio",
    "bot:register": "cd packages/llama-bot && bun run register"
  }
}
